<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <style>
      html,
      body {
        font-family: 'Poppins', sans-serif;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: black;
      }
      label{
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 10px;
        font-size: 25px;
        margin-top: 20px;
      }
      input{
        width: 100%;
        padding: 10px;
        border-radius: 10px;
        border: none;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        margin:20px auto;
      }
      
      .form-group{
        width: 100%;
        background-color: aliceblue;
        border-radius: 30px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        padding: 10px 70px 70px 70px;
      }
      button{
        margin-top: 50px;
        background-color: #f6a508;
        color: aliceblue;
        border: none;
        width: 200px;
        padding: 10px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 16px;
        letter-spacing: 5PX;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
      }
      section{
        padding-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      h6{
        text-align: center;
        font-weight: 700;
        letter-spacing: 2PX;
        border-bottom: 1px solid black;
      }
      img{
        width: 200px;
      }
      textarea{
        border: none;
        width: 100%;
        border-radius: 10px;
      }
      i{
        color: green;
        font-weight: bold;
        font-size: 50px;
      }
      .card {
        background: white;
        padding: 100px;
        border-radius: 4px;
        box-shadow: 0 2px 3px #C8D0D8;
        display: inline-block;
        margin: 0 auto;
      }
    </style>
</head>

<body>
  <div  id="msg" onclick="goToHome()" style="border-radius:200px; height:300px; width:300px; background: #F8FAF5; margin:0 auto; display: none; align-items: center; justify-content: center; text-align: center;">
    <i class="checkmark">âœ“ <br> Success</i>
  </div>
    <form  id="form"> 
        <div class="form-group">
          <section>
            <img src="../public/videos/bg.png" alt="">
            <h6>CONTACT-US</h6>
          </section>
          <input type="text"  id="name" aria-describedby="text" placeholder="Your name">
          <br>
          <input type="email"  id="email" aria-describedby="emailHelp" placeholder="Your email">
          <br>
          <input type="text"  id="text" aria-describedby="text" placeholder="Your phone">
          <br>
          <small id="emailHelp" class="form-text text-muted" >We'll never share your details with anyone else.</small>
          <div class="text-center">
            <button type="button"  onclick="sendData()">CONNECT</button>
            </div>
        </div>
      </form>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
      <script>
        const socket = io()
        socket.on('sent', () => {
          document.getElementById('form').style.display = 'none'
          document.getElementById('msg').style.display = 'flex'
        })
        function goToHome() {
          window.location.reload();
        }
        function sendData(){
          let data = {
            name: document.getElementById('name').value,
            email:document.getElementById('email').value,
            phone:document.getElementById('text').value,
          }
          console.log(data);
          socket.emit('sendEmail', data)
          socket.emit('sendData', data)
        }
      </script>
</body>
</html>